rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: allow users to read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Requests collection: only allow writes via Cloud Functions (service account)
    match /requests/{requestId} {
      // Only allow reads to authenticated users
      allow get, list: if request.auth != null;

      // Only allow writes from service accounts (Cloud Functions)
      allow create, update, delete: if request.auth.token.firebase.sign_in_provider == "custom" ||
                                    (request.auth.token.email_verified == true && request.auth.token.email.matches('.*@gserviceaccount.com$'));

      // Optionally, allow the owner to cancel their request (status -> cancelled)
      allow update: if request.auth != null &&
                    request.resource.data.status == "cancelled" &&
                    resource.data.ownerId == request.auth.uid;
    }
  }
}
